<%= render 'carsharings/header_inner_pages' %>
<section>
    <div class="container">
      <div class="row" style="margin-bottom:0;">
        <div class="col text-center">
          <h2>Covoiturages <b>proposés</b></h2><br>
        </div> 
      </div>
      <div class="btn center">
        <%= link_to "Accueil administrateur", admin_root_path, class: "btn btn-sm btn-secondary" %>
      </div>
      <div class="row">
        <div class="col">
          <div class="table-responsive-lg">
            <table class="table table-lined">
              <thead>
                <tr>
                  <th style="width:7%;" class='admin-tabs-th' scope="col"><b>#id</b></th>
                  <th style="width:20%;" class='admin-tabs-th' scope="col"><b>Golf</b></th>
                  <th style="width:30%;" class='admin-tabs-th' scope="col"><b>Description</b></th>
                  <th style="width:7%;" class='admin-tabs-th' scope="col"><b>Places</b></th>
                  <th style="width:15%;" class='admin-tabs-th' scope="col"><b>Conducteur</b></th>
                  <th style="width:7%;" class='admin-tabs-th' scope="col"><b>Prix</b></th>
                  <th style="width:7%;" class='admin-tabs-th' scope="col"><b>Validé</b></th>
                  <th style="width:7%;" class='admin-tabs-th' scope="col"><b>Action</b></th>
                </tr>
              </thead>
              <tbody>
                <% @carsharings.each do |carsharing|%>
                  <tr>
                    <td class='admin-tabs'><%=carsharing.id%></td>
                    <td class='admin-tabs'><%=Golf.find(carsharing.golf_id).name%></td>
                    <td style="padding:20px 10px;"><%=carsharing.description%></td>
                    <td class='admin-tabs'><%=carsharing.places%></td>
                    <td class='admin-tabs'><%=User.find(carsharing.driver_id).first_name%> <%=User.find(carsharing.driver_id).last_name%></td>
                    <td class='admin-tabs'><%=carsharing.price == 0 ? "Gratuit" : "#{carsharing.price}€"%></td>
                    <td class='admin-tabs'><%=carsharing.validated ? "Oui" : "Non" %></td>
                    <td title= "Validation" class='admin-tabs'>
                      <% if carsharing.validated %>
                        
                      <% else %>
                        <%= link_to '<i class="fas fa-eye fa-1x" style="color:black;"></i>'.html_safe, admin_carsharing_path(carsharing)%>
                      <% end %>
                    </td>  
                  </tr>
                  <%end%>                                
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
</section>
