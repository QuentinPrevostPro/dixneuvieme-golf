<div class="content row justify-content-md-center">
  <div class="card col-lg-10">
    <div class="card-body">
      <h1><%= @carsharings.count %> Covoiturages</h1>
    <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Prix</th>
                  <th>Description</th>
                  <th>Golf</th>
                  <th>Places disponibles</th>
                  <th>Conducteur</th>
                  <th>Valid√©</th>
                </tr>
              </thead>
              <tbody>
                <% @carsharings.each do |i| %>
                  <tr>
                    <td><%= i.id %></td>
                  
                    <td><%= i.price %></td>
                    <td> <%= i.description %></td>
                    <td><%= i.golf_id %></td>
                    <td><%= i.places %></td>
                    <td><%= i.driver_id %></td>
                    <td>
                      <%= link_to '<i class="fas fa-eye fa-1x"></i>'.html_safe, admin_carsharing_path(:id), method: "get", class:""  %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

    </div>
  </div>
</div>