<div class='bg-gradient'>
  <div class="container">
    <div class="row" style="padding-top:0;">
      <div class="col">
        <%= form_tag url_for(action: 'update'), method: "patch", multipart: true do %>
          <div class="form-row mb-1 flex-center">
            <div class="col-md-2">
            <%= select_tag(:is_admin, options_for_select([['Oui', true], ['Non', nil]])) %>
            </div>
          </div>
          <div class="form-row mt-12">
            <div class='col flex-center'>
              <%= submit_tag "Modifier",  class: "btn btn-primary px-5" %>
            </div> 
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
