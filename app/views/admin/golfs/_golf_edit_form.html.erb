<div class='bg-gradient'>
  <div class="container">
    <div class="row" style="padding-top:0;">
      <div class="col">
        <%= form_tag url_for(action: 'update'), method: "patch", multipart: true do %>

          <div class="form-row mb-1 flex-center">
            <div class="col-md-7">
              <%= label_tag 'Nom du Golf*' %>
              <%= text_field_tag 'name', @golf.name, class: 'form-control' %>

              <%= label_tag 'Type de parcours*' %>
              <%= select_tag(:course_type, options_for_select(Golf.pluck(:course_type).uniq, target_blank: true )) %>
              
              <%= label_tag 'Description*' %>
              <%= text_area_tag 'description', @golf.description, class: 'form-control' %>
              
              <%= label_tag 'Image*' %>
              <%= file_field_tag :golf_image %>   
              </br>
              <%= label_tag 'Latitude*' %>
              <%= text_field_tag 'latitude', @golf.lat, class: 'form-control' %>   
              
              <%= label_tag 'Longitude*' %>
              <%= text_field_tag 'longitude', @golf.long, class: 'form-control' %>   
              
              <%= label_tag 'Prix*' %>
              <%= number_field_tag 'price', @golf.price_range, class: 'form-control', in: 1..4, step: 1 %>
              
              <%= label_tag 'Par*' %>
              <%= text_field_tag 'par', @golf.par, class: 'form-control' %>

              <%= label_tag 'Longueur du parcours*' %>
              <%= text_field_tag 'length', @golf.length, class: 'form-control' %>

              <%= label_tag 'Site web*' %>
              <%= text_field_tag 'website', @golf.website, class: 'form-control' %>
                         
            </div>
          </div>
          <div class="form-row mt-12">
            <div class='col flex-center'>
              <%= submit_tag "Modifier",  class: "btn btn-primary px-5" %>
            </div> 
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
