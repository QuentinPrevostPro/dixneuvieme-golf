<%= render 'carsharings/header_inner_pages' %>
<section class="">
      <div class="container">
        <div class="row">
          <div class="col text-center">
            <h2>Golfs <b>référencés</b></h2><br>
            <%= link_to "Ajouter un Golf", new_admin_golf_path, class: "btn btn-secondary btn-rounded" %>
          </div> 
        </div>
        <div>
        </div>
        <div class="row">
          <div class="col">
            <div class="table-responsive-md">
              <table class="table table-lined">
                <thead>
                  <tr>
                    <th scope="col"><b>Name</b></th>
                    <th scope="col"><b>Description</b></th>
                    <th scope="col"><b>Price</b></th>
                    <th scope="col"><b>Course type</b></th>
                    <th scope="col"><b></b></th>
                  </tr>
                </thead>
                <tbody>
                <% @golfs.each do |i|%>
                  <tr>
                    <th scope="row"><%=i.name%></th>
                    <td><%=i.description%></td>
                    <td><%=i.price_range%></td>
                    <td><%=i.course_type%></td>
                    <td>
                    <span title= "Voir"><%= link_to '<i class="fas fa-eye fa-1x"></i>'.html_safe, golf_path(i), method: "get", class:""  %></span>            
                    <span title= "Editer"><%= link_to '<i class="fas fa-edit fa-1x"></i>'.html_safe, edit_admin_golf_path(i), method: "get", class:""  %></span>  
                    <span title= "Supprimer"><%= link_to '<i class="fas fa-trash-alt fa-1x"></i>'.html_safe, admin_golf_path(i), method: "delete", class:"", data: { confirm: "Confirmez-vous la suppression ?" } %></span>
                    </td>  
                  </tr>

                  <%end%>
                 
                
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
</section>


<section>
    <div class="container">
      <div class="row" style="margin-bottom:0;">
        <div class="col text-center">
          <h2>Golfs <b>référencés</b></h2><br>
        </div> 
      </div>
      <div class="btn center">
        <%= link_to "Accueil administrateur", admin_root_path, class: "btn btn-sm btn-secondary" %>
      </div>
      <div class="row">
        <div class="col">
          <div class="table-responsive-lg">
            <table class="table table-lined">
              <thead>
                <tr>
                  <th style="width:7%; padding:0; text-align:center;" scope="col"><b>#id</b></th>
                  <th style="width:20%; padding:0; text-align:center;" scope="col"><b>Nom</b></th>
                  <th style="width:30%; padding:0; text-align:center;" scope="col"><b>Description</b></th>
                  <th style="width:7%; padding:0; text-align:center;" scope="col"><b>Parcours</b></th>
                  <th style="width:15%; padding:0; text-align:center;" scope="col"><b>Par</b></th>
                  <th style="width:7%; padding:0; text-align:center;" scope="col"><b>Distance</b></th>
                  <th style="width:7%; padding:0; text-align:center;" scope="col"><b>Action</b></th>
                </tr>
              </thead>
              <tbody>
                <% @golfs.each do |golf|%>
                  <tr>
                    <td style="padding:20px 10px; text-align:center;"><%=golf.id%></td>
                    <td style="padding:20px 10px; text-align:center;"><%=golf.name%></td>
                    <td style="padding:20px 10px;"><%=golf.description%></td>
                    <td style="padding:20px 10px; text-align:center;"><%=golf.course_type%></td>
                    <td style="padding:20px 10px; text-align:center;"><%=golf.par%></td>
                    <td style="padding:20px 10px; text-align:center;"><%=golf.length%></td>
                    <td title= "Validation" style="padding:20px 10px; text-align:center;">
                      <span title= "Voir" ><%= link_to '<i class="fas fa-eye fa-1x" style="color:black;"></i>'.html_safe, golf_path(golf)%></span>
                      <span title= "Editer" ><%= link_to '<i class="fas fa-edit fa-1x" style="color:black;"></i>'.html_safe, edit_admin_golf_path(golf)%></span>
                      <span title= "Supprimer" ><%= link_to '<i class="fas fa-trash-alt fa-1x" style="color:black;"></i>'.html_safe, golf_path(golf) , method: "delete", data: { confirm: "Es-tu sûr de vouloir supprimer ce profil ?" } %></span>                      
                    </td>  
                  </tr>
                  <%end%>                                
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
</section>
