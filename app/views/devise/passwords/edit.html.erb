<%= render 'carsharings/header_inner_pages' %>
<section class='bg-gradient'>
  <div class="container">
    <div class="row sign-up">
      <div class='col-md-12'>
        <h2>Modifier votre mot de passe</h2>
      </div>
    </div>
    <div class="row" style="padding-top:0;">
      <div class='col'>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <div class="form-row mb-1 flex-center">
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="col-md-7">
            <%= f.hidden_field :reset_password_token %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control form-control-minimal', placeholder: 'Nouveau mot de passe'%>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control form-control-minimal', placeholder: 'Confirmer votre nouveau mot de passe' %>
          </div>
        </div>
          <div class="form-row mt-12">
            <div class='col flex-center'>
              <%= f.submit "Changer mon mot de passe", class: 'btn btn-primary px-5' %>
            </div> 
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
