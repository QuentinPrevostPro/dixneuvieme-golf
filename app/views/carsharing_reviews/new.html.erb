<section class='bg-light' id='all'>
  <div class='container'>
    <div class='row'>
      <div class='col'>
      <h1> Noter le covoiturage</h1>
        <%= form_tag url_for(action: 'create'), method: "post" do %>
        <div class='col'>
          <%= text_area_tag(:content, nil, class: 'form-control form-control-minimal', placeholder: 'Votre avis sur le covoiturage')%>
        </div>
        <div class='col select-form'>
          <%= select_tag(:grade, options_for_select([['0 étoile', 0], ['1 étoile', 1], ['2 étoiles', 2], ['3 étoiles', 3], ['4 étoiles', 4], ['5 étoiles', 5]])) %>
        </div>
          <%= submit_tag 'Noter le covoiturage', class: 'btn btn-primary px-5'%>
        <%end%>
      </div>
    </div>
  </div>
</section>