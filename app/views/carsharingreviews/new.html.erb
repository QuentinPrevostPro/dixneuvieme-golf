<%= render 'carsharings/header_inner_pages' %>
<section class='bg-gradient'>
  <div class="container">
    <div class="row sign-up">
      <div class='col-md-12'>
        <h2>Mon avis sur le covoiturage de <%= @carsharing.driver.first_name %></h2>
      </div>
    </div>
    <div class="row" style="padding-top:0;">
      <div class="col">
        <%= form_tag carsharing_carsharingreviews_path(@carsharing.id), method: "post" do %>
          <div class="form-row mb-1 flex-center">
            <div class="col-md-7">
              <%= select_tag(:grade, options_for_select([['0 étoile', 0.0], ['1 étoile', 1.0], ['2 étoiles', 2.0], ['3 étoiles', 3.0], ['4 étoiles', 4.0], ['5 étoiles', 5.0]])) %>
              <%= text_area_tag 'content', nil, class: 'form-control', rows: '6', placeholder: 'Votre avis sur le covoiturage* (20 caractères minimum)' %>
            </div>
          </div>
          <div class="form-row mt-12">
            <div class='col flex-center'>
              <%= submit_tag "Mon avis", class: 'btn btn-primary px-5' %>
            </div> 
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>


