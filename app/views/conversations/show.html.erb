<h1>Conversation entre <%= current_user[:first_name] %> et <%= user_by_id(params[:id]).first_name %> </h1>

<!-- Received messages -->
<% Privatemessage.all.each do |pm| %>
      <% if (pm.recipient.id == current_user.id && pm.sender.id == user_by_id(params[:id]).id) || (pm.sender.id == current_user.id && pm.recipient.id == user_by_id(params[:id]).id) %>
            <% if pm.recipient.id == current_user.id %>
                  <p> <%= pm.sender.first_name %> : <span class="badge badge-primary text-wrap" style="width: 6rem;" > <%= pm.content %> </span> </p>
            <% else %>
                  <p> <%= pm.sender.first_name %> : <span class="badge badge-secondary text-wrap" style="width: 6rem;" > <%= pm.content %> </span> </p>
            <% end %>   
      <% end %>      
<% end %>
