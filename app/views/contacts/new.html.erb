<%= render 'carsharings/header_inner_pages' %>
<section class='bg-gradient'>
  <div class='container'>
    <div class='row sign-up'>
      <div class='col-md-12'>
        <h2>Nous contacter</h2>
      </div>
    </div>
  </div>
  <div class='row' style='padding-top:0;'>
    <div class='col'>
      <%= form_for @contact do |f| %>
      <div class="form-row mb-1 flex-center">
        <div class="col-md-7">
          <%= f.text_field :name, required: true, class: 'form-control form-control-minimal', placeholder: 'PrÃ©nom*' %>

          <%= f.email_field :email, required: true, class: 'form-control form-control-minimal', placeholder: 'Email*' %>

          <%= f.text_area :message, class: 'form-control', rows: "6", placeholder: 'Ton message' %>

          <div class='hidden'>
            <%= f.label :nickname %> <br>
            <%= f.text_field :nickname, hint: 'Laisser ce champ vide' %> <br>
          </div>
        </div>
      </div>
      <div class="form-row mt-12">
        <div class='col flex-center'>
          <%= f.submit 'Envoyer le message', class: 'btn btn-primary px-5'%>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>